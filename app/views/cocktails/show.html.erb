<div class="show-back" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1514933651103-005eec06c04b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1000&q=500);">
  <div class="card-show">
    <h1><%= @cocktail.name.capitalize %></h1>
    <% if @cocktail.photo.key %>
      <%= cl_image_tag @cocktail.photo.key, height: 200, width: 380, crop: :fill, radius: 10  %>
    <% end %>
    <p></p>
    <% Dose.where(cocktail_id: @cocktail.id).each do |dose| %>
      <ul>
        <li><%= dose.description %> of <%= Ingredient.find(dose.ingredient_id).name %>
            <%= link_to "Delete Dose",
                 dose_path,
                 method: :delete,
                 data: { confirm: "Are you sure?" },
                 class: "btn btn-outline-secondary" %>
        </li>
      </ul>
    <% end %>
    <div class="container footer">
      <%= link_to "Edit Drink", new_cocktail_dose_path(@cocktail), class: "btn btn-outline-secondary" %>
      <%= link_to "Back to Home", cocktails_path , class: "btn btn-outline-secondary" %>
    </div>
  </div>
</div>

