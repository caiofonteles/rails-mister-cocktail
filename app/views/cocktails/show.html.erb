<h1><%= @cocktail.name %></h1>
<% Dose.where(cocktail_id: @cocktail.id).each do |dose| %>
  <ul>
    <li><%= dose.description %> of <%= Ingredient.find(dose.ingredient_id).name %>
        <%= link_to "Delete Dose",
             dose_path,
             method: :delete,
             data: { confirm: "Are you sure?" } %>
    </li>
  </ul>
<% end %>
<%= link_to "Edit Drink", new_cocktail_dose_path(@cocktail) %>
<%= link_to "Back to Home", cocktails_path %>
